{
  "name": "brickphp/brickphp",
  "description": "The official skeleton for BrickPHP framework",
  "authors": [
    {
      "name": "Donato",
      "email": "info@dfix.it",
      "role": "Developer"
    }
  ],
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "brickphp/core": "dev-main",
    "vlucas/phpdotenv": "^5.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"copy('.env.example', '.env');\"",
      "make install"
    ]
  }
}